<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_spacetab"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp" />

    <eu.long1.spacetablayout.SpaceTabLayout
        android:id="@+id/spaceTabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:button_color="@color/blue_light"
        app:icon_four="@drawable/ic_boombox"
        app:icon_one="@drawable/ic_search"
        app:icon_three="@drawable/ic_chart"
        app:icon_two="@drawable/ic_user"
        app:layout_behavior="eu.long1.spacetablayout.SpaceTabLayoutBehavior"
        app:number_of_tabs="four"
        app:starting_position="two"
        app:tab_color="@color/orange"
        app:text_one="Store"
        app:text_three="Home"
        app:text_two="Chart" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>