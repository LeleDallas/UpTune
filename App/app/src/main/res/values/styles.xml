<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyCustomRadioButton">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selectable_text_color_checked_state</item>
        <item name="android:background">@drawable/selectable_text_bg_color_checked_state</item>
        <item name="android:drawableTint">@drawable/selectable_text_color_checked_state</item>
        <item name="android:fontFamily">@font/antic</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="MyMainRoundedActionButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/antic</item>
        <item name="android:background">@color/blue_light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minWidth">160dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">36dp</item>
        <item name="android:paddingStart">36dp</item>
    </style>

    <style name="custom_corner">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <style name="custom_corner_top">
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <style name="custom_cut">
        <item name="cornerSizeTopRight">155dp</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeBottomLeft">155dp</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/blue_light</item>
        <item name="colorControlActivated">@color/blue_light</item>
    </style>

</resources>